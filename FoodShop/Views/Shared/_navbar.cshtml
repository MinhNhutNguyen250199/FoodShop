@model List<FoodShopModel.Categories.CategoryViewModel>
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc;

@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
    <div class="container">
        <a class="navbar-brand" href="index.html">Vegefoods</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menu
        </button>

        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active"><a asp-route-culture="@culture" localize-content class="nav-link">Home</a></li>
                <li class="nav-item active dropdown">
                    <a class="nav-link dropdown-toggle" asp-route-culture="@culture" localize-content  id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Category</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown04">
                        @{
                            var parents = Model.Where(x => x.ParentId == null);
                        }
                        @for (int index = 0; index < parents.Count(); index++)
                        {
                            var parent = parents.ElementAt(index);
                            var children = Model.Where(x => x.ParentId == parent.Id);
                            if (children.Any())
                            {
                                <a> @parent.Name</a>
                                <ul>
                                    @foreach (var item in children)
                                    {
                                        <li><a class="dropdown-item" href="/@culture/@_loc["categoryUrl"]/@item.Id"><i class="icon-chevron-right"></i>@item.Name </a></li>
                                    }
                                </ul>
                            }
                        }
                        var parent = parents.ElementAt(index);
                        var children = Model.Where(x => x.ParentId == parent.Id);
                        @*<a class="dropdown-item" href="shop.html">Shop</a>*@

                    </div>
                <li class="nav-item"><a href="about.html" class="nav-link">About</a></li>
                <li class="nav-item"><a href="blog.html" class="nav-link">Blog</a></li>
                <li class="nav-item"><a href="contact.html" class="nav-link">Contact</a></li>
                <li class="nav-item cta cta-colored"><a href="cart.html" class="nav-link"><span class="icon-shopping_cart"></span>[0]</a></li>

            </ul>
        </div>
    </div>
</nav>